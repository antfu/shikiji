{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2020",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "shikiji": ["./packages/shikiji/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
